global-reset()

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

button
input[type="reset"]
input[type="button"]
input[type="submit"]
  &::-moz-focus-inner
    padding: 0
    margin: 0
    border: 0

input, button, select
  margin: 0
  padding: 0
  border: 0

html, body
  @media screen
    // height: 100%
    // overflow: hidden

body
  font-size: font-size
  font-family: font-sans
  color: color-default
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  overflow-x: hidden

  background-color: #935d8c;
  background-image: url(images/overlay.png), linear-gradient(45deg, #e37682 15%, #5f4d93 85%);  

  @media mq-mobile
    font-size: font-size - 1px

.wrapper
  clearfix()
  @media screen
    max-width: max-width
    margin: 0 auto

.inner
  clearfix()
  @media mq-normal
    padding: 0 gutter-width

#content-wrap
  background: #fff
  border-top: 1px solid darken(color-navy, 5%)
  border-bottom: 1px solid darken(color-navy, 5%)
  margin: -1px 0

  @media mq-mobile
    padding: 1em 1em 0;

.gitter-open-chat-button
  display: none
  @media mq-normal
    display: block;

#particles-js
  position: fixed
  width: 100%
  height: 100%
  z-index: -1    

  display: none
  @media mq-normal
    display: block;
